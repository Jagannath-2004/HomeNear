<style>
  .search-btn{
    background-color: #FF5F15;
    color: wheat;
    border-radius: 25px;
  }
  .search-btn:hover{
    border: 1px solid #FF5F15;
  }
  .search-inp{
    border-radius: 25px;
    width: 30vw;
  }
  .navbar-nav a{
    margin: 0 5px 0 5px;
    font-size: 1rem;
    border-radius: 25px;
    border: 2px solid white;
  }
  .navbar-nav a:hover{
    border:2px solid #0065b1 ;
  }

</style>

<nav class="navbar navbar-expand-sm bg-body-light border-bottom sticky-top">
  <div class="container-fluid d-flex align-items-center">

    <!-- Logo -->
    <a class="navbar-brand" href="/listings">
      <img src="/images/HomeNear_Logo.png" height="40px">
    </a>

    <!--MOBILE SEARCH BAR (appears only before hamburger on small screens) -->
    <form class="d-flex flex-grow-1 mx-2 d-sm-none" 
          role="search" action="/listings/search" method="GET">
      <input name="q" class="form-control me-2 search-inp" type="search" placeholder="Search">
      <button class="btn search-btn" type="submit">Search</button>
    </form>

    <!-- Hamburger -->
    <button class="navbar-toggler ms-2" type="button" 
            data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Menu -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!--DESKTOP SEARCH BAR (visible on sm and larger) -->
      <form class="d-none d-sm-flex ms-auto me-3" 
            role="search" action="/listings/search" method="GET">
        <input name="q" class="form-control me-2 search-inp" type="search" placeholder="Search">
        <button class="btn search-btn" type="submit">Search</button>
      </form>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Add New Listing</a>

        <% if (!currentUser) { %>
          <b><a class="nav-link" href="/login">Login</a></b>
          <b><a class="nav-link" href="/signup">Signup</a></b>
        <% } else { %>
          <a class="nav-link" href="/logout">Logout</a>
        <% } %>
      </div>

    </div>

  </div>
</nav>