<% layout("/layouts/boilerplate") %>
<script>
    const listing = <%- JSON.stringify(listing) %>
</script>

<div class="row mt-3 mb-4">
    <div class="col-10 offset-1 col-md-8 offset-md-3">
        <h3><%= listing.title  %></h3>
    </div>
    <div class="col-10 offset-1 col-md-6 offset-md-3">
        <div class="card card-listing">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.image.filename %>">
            <div class="card-body">
                <!-- <h5 class="card-title"><%= listing.title  %></h5> -->
                <p class="card-text">Owned by <%= listing.owner.username %></p>
                <p class="card-text"><%= listing.description  %></p>
                <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN")  %></p>
                <p class="card-text"><%= listing.location %></p>
                <p class="card-text"><%= listing.country %></p>
            </div>
        </div>
        <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
        <div class=" btns">
            <a class="btn btn-danger " href="/listings/<%= listing._id %>/edit">Edit</a>
            <form  method="post" action="/listings/<%= listing.id %>?_method=DELETE">
                <button class="btn btn-dark offset-4">Delete</button>
            </form>
        </div>
        <% } %>
    </div>
    <hr>
    <div class="col-10 offset-1 col-md-6 offset-md-3">
        <% if(!currentUser) { %>
            <h5>Login to write a review</h5>
        <% } %>
        <% if(currentUser) { %>
        <h3>Leave a review</h3>
        <form method="post" action="/listings/<%= listing._id%>/reviews" novalidate class="needs-validation">
            <div class="mt-3">
                <label for="rating" class="form-label">Rating</label>
                <!-- <input type="range" name="rating" step="1" min="1" max="5" class="form-range"> -->
            
                <fieldset class="starability-fade">
                <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" aria-label="No rating." checked/>
                <input type="radio" id="first-rate1" name="rating" value="1"  />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="rating" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="rating" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="rating" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="rating" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class="mt-3 mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="comment" id="comment" rows="5" cols="25" class="form-control" required></textarea>
                <div class="invalid-feedback">Please add some comments for reviwe</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
        <% } %>
        <div class="reviews">
            <% if(listing.reviews.length) { %>
            <p><b>All Reviews</b></p>
            <% } %>
            
            <div class="row">
                <% for(review of listing.reviews) { %>
                    <div class="card col-12 col-sm-6 col-md-5 mb-3 ms-3">
                        <div class="card-body">
                            <p class="card-title"><b>@<%= review.author.username %></b></p>
                            <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                            <p class="card-text"><%= review.comment %></p>
                            <!-- <p class="card-text"> stars</p> -->
                            <% if(currentUser && currentUser._id.equals(review.author._id)){ %>
                            <form class="mb-3" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                            <% } %>
                        </div>
                        
                    </div>
                <% } %>
            </div>
        </div>
    </div>

</div>

<div id="map" class="mb-3" style="height: 400px; width: 100%; border-radius: 10px;"></div>



